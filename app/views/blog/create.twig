{% extends 'layout.twig' %}

{% block title %}Blog - Nouvel article{% endblock %}

{% block body %}
    
    <form action="{{ path('create_blog_post') }}" method="post">
        <div>
            <label for="blog_title">Titre :</label>
            {% if form.title.errors|length %}
                <ul>
                    {% for error in form.title.errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            {% endif %}
            <input type="text" name="blog[title]" id="blog_title" value="{{ form.title }}"/>
        </div>
        <div>
            <label for="blog_content">Content :</label>
            {% if form.content.errors|length %}
                <ul>
                    {% for error in form.content.errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            {% endif %}
            <textarea name="blog[content]" id="blog_content" rows="20" cols="50">{{ form.content }}</textarea>
        </div>
        <div>
            <button type="submit">Envoyer</button>
        </div>
    </form>

{% endblock %}
