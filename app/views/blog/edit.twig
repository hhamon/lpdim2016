{% extends 'layout.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
{% endblock %}
{% block title %}Edition du Blog Post {{ blog_post.id }}{% endblock %}
{% set error = session.fetch('error') %}
{% block body %}
    {% if error %}
        <div class="alert alert-danger">{{ error }}</div>
    {% endif %}

    {{ html.form('post')|raw }}
    {{ html.inputLabel('Titre','text','title',title?title:blog_post.title)|raw }}
    {{ html.textareaLabel('Contenu','content',content?content:blog_post.content)|raw }}
    {{ html.form_end('Modifier')|raw }}

    <a href="/index.php/blog">Retour Ã  la liste</a>
{% endblock %}
