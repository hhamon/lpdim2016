{% extends 'layout.twig' %}

{% block title %}Inscription au site{% endblock %}

{% block body %}

    <form action="{{ path('user_signup') }}" method="post">
        <div>
            <label for="user_username">Nom d'utilisateur :</label>
            {% if form.username.errors|length %}
                <ul>
                    {% for error in form.username.errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            {% endif %}
            <input type="text" name="user[username]" id="user_username" value="{{ form.username }}"/>
        </div>
        <div>
            <label for="user_password">Mot de passe :</label>
            {% if form.password.errors|length %}
                <ul>
                    {% for error in form.password.errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            {% endif %}
            <input type="password" name="user[password]" id="user_password" value="{{ form.password }}"/>
        </div>
        <div>
            <label for="user_confirmation">Confirmation :</label>
            {% if form.confirmation.errors|length %}
                <ul>
                    {% for error in form.confirmation.errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            {% endif %}
            <input type="password" name="user[confirmation]" id="user_confirmation" value="{{ form.confirmation }}"/>
        </div>
        <div>
            <button type="submit">S'inscrire</button>
        </div>
    </form>

{% endblock %}
